<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pack.GestureApp"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:icon="@drawable/ic_builder"
        android:label="@string/app_name" >
        <activity
            android:name="pack.GestureApp.GestureActivity"
            android:label="@string/test_gesture_activity_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- category android:name="android.intent.category.LAUNCHER"/ -->
            </intent-filter>
        </activity>
        <activity
            android:name="pack.GestureApp.SaveGestureActivity"
            android:label="@string/save_gesture" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- category android:name="android.intent.category.LAUNCHER"/ -->
            </intent-filter>
        </activity>
        <activity
            android:name="pack.GestureApp.GestureListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>